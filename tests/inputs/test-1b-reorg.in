[grid]
  N_radial = 10
  rho_edge = 0.85
  dtau     = 2e-3
  N_steps  = 200
  alpha    = 0

[path]
  vmec_path = "gx-geometry/"

[model]
  #model = ReLU         # default
  model = "ReLU-particle-only" # Qian test 1
  #model = diffusive   # Barnes test 2
  #model = GX          # use slurm to call GX
  D_neo = 0

[[species]]
type = "deuterium"
#use_as_reference = true
density = {core = 5, edge = 2, evolve = true}
temperature = {core = 5, edge = 2, evolve = true}
density_source = { height = 0, width = 0.2, center = 0.5 }
pressure_source = { height = 0, width = 0.2, center = 0.5 }

[[species]]
type = "electron"
#adiabatic = true
density = {core = 5, edge = 2, evolve = true}
#temperature = {core = 5, edge = 2, equal_to = "ion"}
temperature = {core = 5, edge = 2, evolve = true}
density_source = { height = 0, width = 0.2, center = 0.5 }
pressure_source = { height = 0, width = 0.2, center = 0.5 }

[geometry]
  Ba        = 4
  R_major   = 2.95
  a_minor   = 0.95
  vmec_wout = "wout_w7x.nc"
  use_vmec  = false # (B,R,a) can be overwritten from vmec

[debug]
  collisions = false
  alpha_heating      = false
  bremstrahlung      = false
  update_equilibrium = false
  turbulent_exchange = false
  compute_surface_areas = false

[log]
  N_prints = 12
  f_save   = "log_trinity"
